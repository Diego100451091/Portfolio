<style>

  .animated path {
    fill-opacity: 0;
    stroke-dasharray: 1300; /* Longitud de la circunferencia */
    stroke-dashoffset: 1300; /* Hace que el trazo sea invisible */
    animation: draw 4.5s ease forwards; /* Inicia la animaci√≥n */
  }

  @keyframes draw {
    80% {
      fill-opacity: 0; /* Hace que el trazo sea invisible */
    }

    100% {
      fill-opacity: 100%; /* Hace que el trazo sea visible */
      stroke-dashoffset: 0; /* Hace que el trazo sea visible */
      /* stroke-width: 2; Grosor del trazo */
    }
  }
</style>
