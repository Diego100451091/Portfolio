---
import ColoredLogo from "../icons/ColoredLogo.astro"

---

<div id="welcome-screen">
  <ColoredLogo width="300px" height="300px"/>
</div>

<style>
  #welcome-screen {
    background: var(--smoky-black);     
    position: fixed;
    top: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    z-index: 10;
    transition: opacity 1s;
    animation: fade-out 4.5s forwards;
  }

  @keyframes fade-out {
    0% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    99% {
      opacity: 0;
    }
    100% {
      opacity: 0;
      display: none;
    }
  }


</style>