---
import Logo from "../../icons/Logo.astro";
import ColoredLogo from "../../icons/ColoredLogo.astro";
---

<figure>
  <!-- <Logo width="100%" height="100%"/> -->
  <div class="shadow"></div>
  <ColoredLogo width="100%" height="100%" animated={false}/>
</figure>

<style>
  figure {
    background: var(--bg-gradient-onyx);
    border-radius: 20px;
    display: flex;
    aspect-ratio: 1;
    height: auto;
    width: 80px;
    padding: 15px;
    position: relative;
    z-index: 0;
    /* color: var(--old-blue) */
  }

  .shadow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50%;
    height: 80%;
    width: 80%;
    margin: auto;
    opacity: 0.2;
    background: radial-gradient(
      ellipse at center,
      var(--smoky-black) 39%,
      transparent 68%
    );
    z-index: -1;
  }

  @media (min-width: 580px) {
    figure {
      border-radius: 30px;
      width: 120px;
    }
  }

  @media (min-width: 1250px) {
    figure {
      width: 150px;
    }
  }
</style>
