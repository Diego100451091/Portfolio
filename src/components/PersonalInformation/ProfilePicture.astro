---
import Logo from '../../icons/Logo.astro'
---

<figure>
    <Logo width="100%" height="100%"/>
</figure>

<style>
    figure {
        background: var(--bg-gradient-onyx);
        border-radius: 20px;
        display: flex;
        aspect-ratio: 1;
        height: auto;
        width: 80px;
        padding: 15px;

        color: var(--old-blue)
    }

    @media(min-width: 580px){
        figure { 
            border-radius: 30px;
            width: 120px; 
        }
    }

    @media(min-width: 1250px){
        figure { width: 150px; }
    }

</style>